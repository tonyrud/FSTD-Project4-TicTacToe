{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceRoot}/js/application.js"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceRoot}/js/application.js",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        }
    ]
}